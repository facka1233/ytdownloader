<Window x:Class="kelompok_1.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kelompok_1"
        mc:Ignorable="d"
        Title="About" Height="450" Width="800" Background="#CD0430"
        ResizeMode="NoResize">
    <Grid>
        <Button  x:Name="backButton" BorderThickness="0"
                 Background="Transparent" Foreground="White" 
                 VerticalAlignment="Top" Width="53" Height="32" Click="backButton_Click">
            <StackPanel Orientation="Horizontal"/>
        </Button>
        <Image Source="logo/youtube.png" Margin="-19,-7,707,373"/>
        <TextBlock HorizontalAlignment="Left" Margin="77,8,0,0" TextWrapping="Wrap" Foreground="White" FontSize="30" Text="Youtube Downloader" VerticalAlignment="Top" Height="53" Width="304"/>
        <TextBlock HorizontalAlignment="Left" Margin="77,52,0,0" TextWrapping="Wrap" Foreground="White" FontSize="30" FontFamily="Arial" Text="Apps that can help you download Youtube Video easily" VerticalAlignment="Top"/>
        <Border BorderBrush="Black" BorderThickness="0"/>
    </Grid>
</Window>
